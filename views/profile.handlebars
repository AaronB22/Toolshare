<body class='bg-gray-700'>
  <header class="bg-gray-400 rounded-full shadow-sm">
    <div class="max-w-7xl mx-auto py-4 px-4 sm:px-6 lg:px-8">
      <h1 class="text-lg leading-6 font-semibold bg-gray-400 text-gray-200">
        My Profile
      </h1>
    </div>
  </header>
  <main>
    <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
      <div class="px-4 py-4 sm:px-0">
        <div class="">
          <div class='card m-4  border-gray-200 rounded-lg h-auto w-auto'>
              <h1 class='text-3xl text-gray-200 p-2 bg-gray-400 rounded-full'>Post a Tool</h1>
              <input type='text' id='new_name' class='w-auto m-2 p-1 rounded text-gray-700' placeholder='Tool Name'/>
              <input type='text' id='new_description' class='w-auto m-2 p-1 rounded text-gray-700' placeholder='Description'/>
              <select class='form-select p-1 m-2 rounded' placeholder='Make' id='new_make'>
                <option value='default_label' selected>Select Make</option>
                {{#each makes as |make|}}
                <option value='{{make.id}}'>{{make.make_name}}</option>
                {{/each}}
              </select>
              <select class='form-select p-1 m-2 rounded' placeholder='Type' id='new_type'>
                <option value='default_label' selected>Select Type</option>
                {{#each types as |type|}}
                <option value='{{type.id}}'>{{type.tool_types_name}}</option>
                {{/each}}
              </select>
              <select class='form-select p-1 m-2 rounded' placeholder='Category' id='new_category'>
                <option value='default_label' selected>Select Category</option>
                {{#each categories as |category|}}
                <option value='{{category.id}}'>{{category.categories_name}}</option>
                {{/each}}
              </select>
              <input type='text' id='new_asking' class='w-auto m-2 p-1 rounded text-gray-700' placeholder='Asking'/>
              <button type='submit' id='submit_btn' class='bg-gray-400 text-gray-200 rounded p-1 m-2 hover:bg-gray-200 hover:text-gray-400'>Submit</button>
              <!-- <input type='text' class='rounded text-gray-700' placeholder='description'/> -->
              
              <ul class='text-gray-200'>

              </ul>

          </div>

          <div class='card m-4  border-gray-200 rounded-lg h-auto w-auto'>
            <h1 class='text-3xl text-gray-200 p-2 bg-gray-400 rounded-full'>My Tools</h1>
            <ul class='tool-list-container mt-5 flex flex-row'>
              {{#each myTools as |tool| }}
              <li>
                <div class="max-w-xs bg-gray-200 m-4 rounded-lg shadow-lg">
                  <img class="object-cover  w-60" src="/images/logo-gray.png" alt="tool trader logo"/>
                  <div class="flex-1 flex flex-col p-2 mx-auto">
                      <dd class="text-gray-600 text-sm m-2" id="">Name: {{tool.tool_name}}</dd>
                      <dd class="text-gray-600 text-sm m-2" id="">Description: {{tool.tool_description}}</dd>
                      <dd class="text-gray-600 text-sm m-2" id="">Make: {{tool.toolMake.make_name}}</dd>
                      <dd class="text-gray-600 text-sm m-2" id="">Type: {{tool.toolType.tool_types_name}}</dd>
                      <dd class="text-gray-600 text-sm m-2" id="">Category: {{tool.toolCategory.categories_name}}</dd>
                      <dd class="text-gray-600 text-sm m-2" id="">Asking: {{tool.asking}}</dd>
                  </div>
                  <div class="-mt-px flex divide-x border-t divide-gray-200">
                      <div class="w-0 flex-1 flex">
                          <a href="/selected/?:{{tool.id}}" target="_blank" class="relative -mr-px w-0 flex-1 inline-flex items-center justify-center py-4 text-sm text-gray-700 font-medium border border-transparent rounded-bl-lg hover:text-gray-500">
                          <i class="fas fa-tools"></i>
                          <span class="ml-3">Select</span>
                          </a>
                      </div>
                  
                  </div>
                </div>
              </li>
              {{/each}}
              </ul>
          </div>  
        </div>
      </div>
    </div>
  </main>
  <script src="/js/newTool.js"></script>
</body>